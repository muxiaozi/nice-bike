.map_container{
  position: absolute;
  top: 0;
  bottom: 10px;
  left: 0;
  right: 0;
}
.map{
  width: 100%;
  height: 100%;
}
.ui-do-record{
  position: absolute;
  height: 100rpx;
  background: #fff;
  border-radius: 90% 90% 0 0;
  bottom: 0;
  left: 0;
  width: 100%;
}
.ui-do-record-text{
  font-size:12px;
  position: absolute;
  bottom: 10rpx;
  width: 100%;
  text-align: center;
} 
